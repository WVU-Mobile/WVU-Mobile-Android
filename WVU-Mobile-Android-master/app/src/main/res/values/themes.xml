<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="MainBarTheme"
        parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MainActionBar</item>
        <item name="android:statusBarColor">@color/DarkBlueColor</item>
        <item name="android:windowActionBarOverlay">@style/MainActionBar</item>
        <item name="android:textColor">@color/ColorGold</item>
        <item name="android:title">MENU</item>
        <item name="android:labelTextSize">50sp</item>
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MainActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MainActionBar"
        parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/DarkBlueColor2</item>
        <item name="android:titleTextStyle">@style/MainActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@color/DarkBlueColor2</item>
        <item name="titleTextStyle">@style/MainActionBarTitleText</item>
    </style>

    <style name="MainActionBarTitleText"
        parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/ColorGold</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

</resources>